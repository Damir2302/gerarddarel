                .table-container
                    label Пол <span class="required-indicator">*</span>

                    .customer-wrapper
                        div.customer-gender
                            input#customerMan(type="radio", name="gender" value="1" required)
                            label(for="customerMan") Мужчина
                        div.customer-gender
                            input#customerFemale(type="radio", name="gender" value="2" required)
                            label(for="customerFemale") Женщина

                span.error-message Укажите пол.

            .table-row
                .table-container
                    label Фамилия <span class="required-indicator">*</span>
                    input#customerLastname(type="text", name="last-name" max-length="25"  required)
                span.error-message Введите фамилию.

            .table-row
                .table-container
                    label Имя <span class="required-indicator">*</span>
                    input#customerName(type="text" name="name" max-length="25"  required)
                span.error-message Введите имя.

            .table-row
                .table-container
                    label E-mail <span class="required-indicator">*</span>
                    input#customerEmail(type="email" name="email" max-length="64"  required)
                    span Мы свяжемся с вами по этому адресу электронной почты, если с вашим заказом возникнут проблемы.
                span.error-message Введите e-mail.


            .table-row
                .table-container
                    label Пароль <span class="required-indicator">*</span>
                    input#customerPassword(type="password" name="password" max-length="255"  required)
